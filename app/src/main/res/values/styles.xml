<resources>

    <!-- Base application theme. -->
    <style name="LightMode" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/textPrimaryDark</item>
        <item name="android:windowBackground">@color/textPrimaryDark</item>
        <item name="secondaryTextColor">@color/textPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="bgTintColor">@color/colorPrimary</item>
        <item name="android:searchIcon">@drawable/search_light_drawable</item>
        <item name="android:textColorAlertDialogListItem">@color/colorPrimary</item>
        <item name="android:closeIcon">@drawable/close_icon_light</item>
        <item name="background">@color/textPrimaryDark</item>
        <item name="colorOnBackground">@color/colorPrimary</item>
        <item name="android:goIcon">@drawable/send_icon_light</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkMode" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:closeIcon">@drawable/close_icon_dark</item>
        <item name="android:goIcon">@drawable/send_icon_dark</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimary</item>

        <item name="backgroundTint">@color/textPrimaryDark</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColorAlertDialogListItem">@color/colorPrimary</item>
        <item name="secondaryTextColor">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/textPrimaryDark</item>
        <item name="bgTintColor">@color/textPrimaryDark</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:searchIcon">@drawable/search_dark_drawable</item>
    </style>

    <style name="DarkMode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkMode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkMode.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="LightMode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightMode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LightMode.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
